{
    "name": "gokure/hyperf-http-logger",
    "description": "Log HTTP requests and responses for Hyperf.",
    "keywords": ["hyperf", "logger", "http-logger", "request", "request-logger"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Gang Wu",
            "email": "gokure@gmail.com"
        }
    ],
    "require": {
        "php": ">= 8.0",
        "hyperf/di": "~3.0.0",
        "hyperf/http-server": "~3.0.0",
        "hyperf/logger": "~3.0.0",
        "monolog/monolog": "^2.7|^3.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.5",
        "hyperf/testing": "~3.0.0"
    },
    "autoload": {
        "psr-4": {
            "Gokure\\HttpLogger\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "hyperf": {
            "config": "Gokure\\HttpLogger\\ConfigProvider"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
